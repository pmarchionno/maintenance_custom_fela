<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_inherit_maintenance_custom_fela" model="ir.ui.view">
        <field name="name">res.config.settings.maintenance.custom.fela.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="maintenance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insertamos nuestro bloque al final del formulario -->
            <xpath expr="//form" position="inside">
                <group string="Maintenance Custom Fela">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="view_vendor"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="view_vendor"/>
                                <div class="text-muted">
                                    Si está activo, se mostrarán los campos de vendor y email cc en las solicitudes de mantenimiento
                                </div>
                            </div>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>